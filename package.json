{
  "name": "spotify-clone",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "18.15.0"
  },
  "cacheDirectories": [
    "node_modules",
    "spotify-client/node_modules"
  ],
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "server": "nodemon index.js",
    "client": "cd spotify-client && npm start",
    "postinstall": "cd spotify-client && npm install",
    "build": "NODE_ENV=production cd spotify-client/ && npm install && npm run build",
    "start-server": "node index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "nodemon": "^2.0.22"
  }
}
